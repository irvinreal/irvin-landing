---
import IconNav from '../icons/IconNav.astro';
import Link from "./Link.astro";
const {pathname} = Astro.url

const path = '/irvin-landing/my-projects'

const landingP = `${path}/landing-pages`
const games = `${path}/games`
const react = `${path}/react`

---
<div id="aside-container" class="relative w-screen md:w-fit h-10 md:h-full">

  <aside class='dark:bg-gray-900 md:dark:bg-gray-950/40 py-1 md:pt-0 w-full md:w-1/4 md:h-full absolute md:z-[1000] md:sticky top-0 left-0 flex md:block'>
    <ul class='flex-1 md:mt-32 ms-1 md:me-6 md:pb-10 dark:text-white text-center flex flex-col gap-3 md:border-l md:border-r border-gray-800'>
          <Link
          titleBtn='Landing Pages'
          stnVisible={pathname.endsWith('/landing-pages')}
          href={landingP}
          />
          <Link 
          titleBtn='Games' 
          stnVisible={pathname.endsWith('/games')} 
          href={games}
          />
          <Link
          titleBtn="React"
          stnVisible={pathname.endsWith('/react')} 
          href={react}
          />
    </ul>
    <div class="md:hidden">
      <button id="aside-btn" class="text-white px-2 mx-2 py-1"><IconNav /></button>
    </div>
  </aside>
</div>


<script>
  const asideBtn = document.getElementById('aside-btn')
  const asideContainer = document.getElementById('aside-container')

  const sidebar_link_li = document.getElementsByClassName('sidebar-link-li')

  asideBtn.addEventListener('click', () => {
    asideContainer.classList.toggle('h-32')

    for (const li of sidebar_link_li) {
      console.log()

      li.classList.add('block')
      li.classList.remove('hidden')
    }


  })
</script>